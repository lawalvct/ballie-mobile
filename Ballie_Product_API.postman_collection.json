                "description": "Update product fields (partial update supported)"
            },
            "response": []
        },
        {
            "name": "8. Delete Product",
            "request": {
                "method": "DELETE",
                "header": [],
                "url": {
                    "raw": "{{base_url}}/{{tenant}}/inventory/products/1",
                    "host": ["{{base_url}}"],
                    "path": ["{{tenant}}", "inventory", "products", "1"]
                },
                "description": "Delete a product (only if no stock movements exist)"
            },
            "response": []
        },
        {
            "name": "9. Toggle Product Status",
            "request": {
                "method": "POST",
                "header": [],
                "url": {
                    "raw": "{{base_url}}/{{tenant}}/inventory/products/1/toggle-status",
                    "host": ["{{base_url}}"],
                    "path": [
                        "{{tenant}}",
                        "inventory",
                        "products",
                        "1",
                        "toggle-status"
                    ]
                },
                "description": "Activate or deactivate a product"
            },
            "response": []
        },
        {
            "name": "10. Get Stock Movements",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{base_url}}/{{tenant}}/inventory/products/1/stock-movements?from_date=2025-12-01&to_date=2025-12-31&per_page=50",
                    "host": ["{{base_url}}"],
                    "path": [
                        "{{tenant}}",
                        "inventory",
                        "products",
                        "1",
                        "stock-movements"
                    ],
                    "query": [
                        {
                            "key": "from_date",
                            "value": "2025-12-01"
                        },
                        {
                            "key": "to_date",
                            "value": "2025-12-31"
                        },
                        {
                            "key": "transaction_type",
                            "value": "purchase",
                            "disabled": true
                        },
                        {
                            "key": "per_page",
                            "value": "50"
                        }
                    ]
                },
                "description": "Get stock movement history with filters"
            },
            "response": []
        },
