                    "raw": "{\n    \"name\": \"Laptop Dell Inspiron 15 (Updated)\",\n    \"sales_rate\": 58000,\n    \"mrp\": 62000,\n    \"is_featured\": true,\n    \"reorder_level\": 3\n}"
