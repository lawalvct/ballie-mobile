            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{base_url}}/{{tenant}}/inventory/products?page=1&per_page=15",
                    "host": ["{{base_url}}"],
                    "path": ["{{tenant}}", "inventory", "products"],
                    "query": [
                        {
                            "key": "page",
                            "value": "1"
                        },
                        {
                            "key": "per_page",
                            "value": "15"
                        }
                    ]
                },
                "description": "Get paginated list of all products"
            },
            "response": []
        },
        {
            "name": "5. List Products (With Filters)",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{base_url}}/{{tenant}}/inventory/products?search=laptop&type=item&status=active&category_id=1&stock_status=in_stock&sort_by=name&sort_order=asc",
                    "host": ["{{base_url}}"],
                    "path": ["{{tenant}}", "inventory", "products"],
                    "query": [
                        {
                            "key": "search",
                            "value": "laptop",
                            "description": "Search in name, SKU, barcode"
                        },
                        {
                            "key": "type",
                            "value": "item",
                            "description": "item or service"
                        },
                        {
                            "key": "status",
                            "value": "active",
                            "description": "active or inactive"
                        },
                        {
                            "key": "category_id",
                            "value": "1",
                            "description": "Category ID"
                        },
                        {
                            "key": "stock_status",
                            "value": "in_stock",
                            "description": "in_stock, low_stock, out_of_stock"
                        },
                        {
                            "key": "sort_by",
                            "value": "name",
                            "description": "name, sku, created_at, updated_at"
                        },
                        {
                            "key": "sort_order",
                            "value": "asc",
                            "description": "asc or desc"
                        }
                    ]
                },
                "description": "Get products with multiple filters applied"
            },
            "response": []
