{
    "info": {
        "name": "Ballie - Product Management API",
        "description": "Complete Product Management API for mobile applications. Supports CRUD operations, stock tracking, bulk actions, and advanced filtering.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
        "_exporter_id": "12345678"
    },
    "auth": {
        "type": "bearer",
        "bearer": [
            {
                "key": "token",
                "value": "{{auth_token}}",
                "type": "string"
            }
        ]
    },
    "variable": [
        {
            "key": "base_url",
            "value": "https://yourdomain.com/api/v1/tenant",
            "type": "string"
        },
        {
            "key": "tenant",
            "value": "demo-company",
            "type": "string"
        },
        {
            "key": "auth_token",
            "value": "",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "1. Get Form Data (Create)",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{base_url}}/{{tenant}}/inventory/products/create",
                    "host": ["{{base_url}}"],
                    "path": ["{{tenant}}", "inventory", "products", "create"]
                },
                "description": "Get categories, units, and ledger accounts for product creation form"
            },
            "response": [
                {
                    "name": "Success Response",
                    "originalRequest": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/{{tenant}}/inventory/products/create",
                            "host": ["{{base_url}}"],
                            "path": [
                                "{{tenant}}",
                                "inventory",
                                "products",
                                "create"
                            ]
                        }
                    },
                    "status": "OK",
                    "code": 200,
                    "_postman_previewlanguage": "json",
                    "header": [],
                    "cookie": [],
                    "body": "{\n    \"success\": true,\n    \"data\": {\n        \"categories\": [\n            {\n                \"id\": 1,\n                \"name\": \"Electronics\",\n                \"description\": \"Electronic products\"\n            }\n        ],\n        \"units\": [\n            {\n                \"id\": 1,\n                \"name\": \"Piece\",\n                \"short_name\": \"pcs\"\n            }\n        ],\n        \"ledger_accounts\": [\n            {\n                \"id\": 101,\n                \"name\": \"Stock in Hand\",\n                \"account_code\": \"1500\",\n                \"account_type\": \"asset\"\n            }\n        ],\n        \"default_accounts\": {\n            \"stock\": {\n                \"id\": 101,\n                \"name\": \"Stock in Hand\"\n            },\n            \"sales\": {\n                \"id\": 201,\n                \"name\": \"Sales\"\n            },\n            \"purchase\": {\n                \"id\": 301,\n                \"name\": \"Purchase\"\n            }\n        }\n    }\n}"
                }
            ]
        },
        {
            "name": "2. Create Product (Item)",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"type\": \"item\",\n    \"name\": \"Laptop Dell Inspiron 15\",\n    \"sku\": \"LAP-DEL-001\",\n    \"description\": \"15.6 inch laptop with Intel i5 processor\",\n    \"category_id\": 1,\n    \"brand\": \"Dell\",\n    \"hsn_code\": \"84713010\",\n    \"barcode\": \"1234567890123\",\n    \"purchase_rate\": 45000,\n    \"sales_rate\": 55000,\n    \"mrp\": 60000,\n    \"primary_unit_id\": 1,\n    \"opening_stock\": 10,\n    \"reorder_level\": 5,\n    \"maintain_stock\": true,\n    \"stock_asset_account_id\": 101,\n    \"sales_account_id\": 201,\n    \"purchase_account_id\": 301,\n    \"tax_rate\": 18,\n    \"is_active\": true,\n    \"is_visible_online\": true,\n    \"is_featured\": false,\n    \"slug\": \"laptop-dell-inspiron-15\",\n    \"meta_title\": \"Dell Inspiron 15 Laptop\",\n    \"meta_description\": \"Buy Dell Inspiron 15 laptop online\"\n}"
                },
                "url": {
                    "raw": "{{base_url}}/{{tenant}}/inventory/products",
                    "host": ["{{base_url}}"],
                    "path": ["{{tenant}}", "inventory", "products"]
                },
                "description": "Create a new physical product"
            },
            "response": []
        },
        {
            "name": "3. Create Product (Service)",
            "request": {
                "method": "POST",
                "header": [
